set from = "harry@thoughtbot.com"
set sendmail = "/usr/local/bin/msmtp -a thoughtbot"
set spoolfile = "+thoughtbot/INBOX"
set mbox = "+thoughtbot/archive"
set postponed = "+thoughtbot/drafts"
macro index gi "<change-folder>+thoughtbot/INBOX<enter>" "go to the INBOX"
macro index gt "<change-folder>+personal/INBOX<enter>" "next account"

macro index d "s=personal/archive\n" "archive message"
macro pager d "s=personal/archive\n" "archive message"
